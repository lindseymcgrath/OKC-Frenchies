{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": ".", // ðŸ”¥ Required for path mapping
    "paths": {
      "@/*": ["src/*"] // ðŸ”¥ Points the shortcut to your new src folder
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src", "src/vite-env.d.ts"] // ðŸ”¥ Tells TS where your code lives
}